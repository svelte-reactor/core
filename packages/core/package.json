{
  "name": "@svelte-reactor/core",
  "version": "0.3.0",
  "description": "Reactive state management for Svelte 5 with plugins, forms, undo/redo, persistence, and DevTools.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "svelte-reactor": "./cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "svelte": "./dist/plugins/index.js",
      "default": "./dist/plugins/index.js"
    },
    "./helpers": {
      "types": "./dist/helpers/index.d.ts",
      "svelte": "./dist/helpers/index.js",
      "default": "./dist/helpers/index.js"
    },
    "./devtools": {
      "types": "./dist/devtools/devtools.d.ts",
      "svelte": "./dist/devtools/devtools.js",
      "default": "./dist/devtools/devtools.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "svelte": "./dist/utils/index.js",
      "default": "./dist/utils/index.js"
    }
  },
  "files": [
    "dist",
    "cli",
    "templates",
    "README.md",
    "QUICK_START.md",
    "MIGRATION.md",
    "API.md",
    "EXAMPLES.md",
    "PERFORMANCE.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "clean": "rm -rf dist *.tsbuildinfo",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "bench": "vitest bench --run",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "check": "pnpm typecheck && pnpm test",
    "prepublishOnly": "pnpm clean && pnpm check && pnpm build"
  },
  "keywords": [
    "svelte",
    "svelte5",
    "svelte-5",
    "runes",
    "state-management",
    "reactive",
    "store",
    "stores",
    "writable",
    "svelte-stores",
    "forms",
    "form-validation",
    "undo",
    "redo",
    "middleware",
    "devtools",
    "persistence",
    "persist",
    "localStorage",
    "time-travel",
    "sveltekit",
    "ssr",
    "typescript",
    "helpers",
    "utilities",
    "cli",
    "ai",
    "claude",
    "cursor",
    "copilot",
    "code-assistant"
  ],
  "author": "Svelte Reactor Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/svelte-reactor/core.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/svelte-reactor/core/issues"
  },
  "homepage": "https://github.com/svelte-reactor/core#readme",
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "dependencies": {
    "kleur": "^4.1.5",
    "lz-string": "^1.5.0",
    "prompts": "^2.4.2",
    "sade": "^1.8.1"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "fake-indexeddb": "^6.2.4",
    "jsdom": "^24.0.0",
    "svelte": "^5.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  }
}
